<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

    <springProperty scope="context" name="logPath" source="nacos.logs.path" defaultValue="${user.home}/nacos/logs"/>
    <springProperty scope="context" name="logContextName" source="nacos.logs.contextPath" defaultValue="nacos"/>
    <springProperty scope="context" name="logMaxSize" source="nacos.logs.maxSize" defaultValue="1GB"/>
    <springProperty scope="context" name="logMaxHistory" source="nacos.logs.maxHistory" defaultValue="30"/>

    <contextName>${logContextName}</contextName>

    <!-- Log console output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Log file output -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Error log file output -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_error.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Nacos cluster log -->
    <appender name="CLUSTER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_cluster.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_cluster.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Nacos core log -->
    <appender name="CORE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_core.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_core.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Nacos raft log -->
    <appender name="RAFT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_raft.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_raft.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Nacos naming log -->
    <appender name="NAMING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_naming.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_naming.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Nacos config log -->
    <appender name="CONFIG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/nacos_config.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/nacos_config.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>${logMaxHistory}</maxHistory>
            <totalSizeCap>${logMaxSize}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Loggers -->
    <logger name="com.alibaba.nacos.core.cluster" level="INFO" additivity="false">
        <appender-ref ref="CLUSTER"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.alibaba.nacos.core" level="INFO" additivity="false">
        <appender-ref ref="CORE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.alibaba.nacos.core.raft" level="INFO" additivity="false">
        <appender-ref ref="RAFT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.alibaba.nacos.naming" level="INFO" additivity="false">
        <appender-ref ref="NAMING"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.alibaba.nacos.config" level="INFO" additivity="false">
        <appender-ref ref="CONFIG"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>